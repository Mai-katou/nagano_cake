<h2>会員情報編集</h2>
  <%= form_with model: @customer, method: :patch, url: customers_path, local:true do |f| %>

 <table class= "table table-borderless">
  <tbody>
    <tr>
      <th scope="row">氏名</th>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <td><%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th scope="row">電話番号</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '編集内容を保存' ,class: 'btn btn-success' %></td>
      <td><%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %></td>
    </tr>
  </tbody>
</table>

<% end %>