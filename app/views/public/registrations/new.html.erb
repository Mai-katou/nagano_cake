<h2>新規会員登録</h2>

<div class="container">
<%= form_with model: @customer, method: :post, url: customer_registration_path, local:true do |f| %>
  <%= render "public/shared/error_messages", resource: resource %>

<table class= "table table-borderless">
  <tbody>
    <tr>
      <th scope="row">名前</th>
      <td>(姓)<%= f.text_field :last_name %> (名)<%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <td>(セイ)<%= f.text_field :last_name_kana %>(メイ)<%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th scope ="row">電話番号(ハイフンなし)</th>
      <td><%= f.text_field :telephone_number %></td>
    </tr>
    <tr>
      <th scope="row">パスワード(6文字以上)</th>
      <td> <% if @minimum_password_length %>
      <em>(<%= @minimum_password_length %> characters minimum)</em>
      <% end %><br />
      <%= f.password_field :password, autocomplete: "new-password" %></td>
    </tr>
    <tr>
      <th>パスワード(確認用)</th>
      <td> <%= f.label :password_confirmation %><br />
      <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
      </td>
    </tr>
    <tr>
      <th></th>
      <td> <%= f.submit "新規登録", class: "btn btn-success" %></td>
    </tr>
  </tbody>
</table>
<% end %>

<h2>既に登録済みの方</h2>
  <p><%= link_to 'こちら', new_customer_session_path %>からログインしてください</p>
