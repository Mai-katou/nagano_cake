<h2>注文情報確認</h2>

 <table class="table table-light">
      <thead>
        <tr>
          <th scope="col">商品</th>
          <th scope="col">単価</th>
          <th scope="col">個数</th>
          <th scope="col">小計</th>
        </tr>
      </thead>
      <tbody>
      <% @cart_items.each do |cart_item| %>
        <tr>
          <td>
            <%= cart_item.item.name %></td>
          <td><%= cart_item.item.price %></td>
          <td><%= cart_item.amount %></td>
          <td><%= cart_item.item.with_tax_price %>
          <% @subtotal += cart_item.subtotal %></td>
        </tr>
      <% end %>
      </tbody>
    </table>

    <table>
      <tbody>
        <%= form_with model: @order, url: orders_path, method: :post, local:true do |f| %>
        <tr>
          <th>送料</th>
          <td><%= f.hidden_field :postage, :value => @order.postage %>
              <%= @order.postage %></td>
        </tr>
        <tr>
          <th>商品合計</th>
          <td><%= @subtotal %></td>
        </tr>
        <tr>
          <th>請求合計</th>
          <td><%= f.hidden_field :total_payment, :value => @order.postage.to_i + @subtotal.to_i %>
              <%= @order.postage.to_i + @subtotal.to_i %> </td>
        </tr>
      </tbody>
    </table>

    <p>支払方法</p>
      <%= f.hidden_field :payment_method, :value => @order.payment_method %>
      <%= @order.payment_method_i18n %>
    <p>お届け先　〒
      <%= f.hidden_field :postal_code, :value =>@order.postal_code %>
      <%= @order.postal_code %>
      <%= f.hidden_field :address, :value => @order.address %>
      <%= @order.address %>
      <%= f.hidden_field :name, :value => @order.name %>
      <%= @order.name %></p>


    <%= f.submit "注文を確定する", class: "btn btn-success" %>
    <% end %>
