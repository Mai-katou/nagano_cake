<h2>注文情報確認</h2>
<%= form_with model: @order, url: orders_confirm_path,local: true do |f| %>

<p>支払方法</p>
<%= f.radio_button :payment_method, "credit_card" %>
<%= f.label :payment_method, "クレジットカード" %>
<%= f.radio_button :payment_method, "transfer" %>
<%= f.label :payment_method, "銀行振り込み" %>

<p>お届け先</p>

<%= f.radio_button :select_address, "0" %>
<%= f.label :select_address, "自身の住所" %>

<%= f.radio_button :select_address, "1" %>
<%= f.label :select_address, "登録済み住所から選択" %>
<%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :address_display) %><br>

<%= f.radio_button :select_address, "2" %>
<%= f.label :select_address ,"新しいお届け先" %>
<p>郵便番号(ハイフンなし)<%= f.text_field :postal_code %></p>
<p>住所<%= f.text_field :address %></p>
<p>宛名<%= f.text_field :name %></p>

<%= f.submit "確認画面へ進む", class:"btn btn-primary" %>

<% end %>


