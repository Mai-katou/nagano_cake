<h2>商品一覧(全<%= @items.count %>件)</h2>
<div class="container">
  <div class="row">
    <% @items.each do |item| %>
    <div class="col-md-3">
      <%=link_to item_path(item.id) do %>
      <%= image_tag item.get_image %>
      <% end %>
      <p><%= item.name %></p>
      <p>￥<%= item.with_tax_price %></p>
    </div>
    <% end %>
  </div>
</div>
<%= paginate @items %>