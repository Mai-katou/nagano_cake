<h2>配送先編集</h2>
<%= form_with model: @address, method: :patch ,url: address_path(@address.id), local:true do |f| %>

<table class= "table table-borderless">
  <tbody>
    <tr>
      <th>郵便番号(ハイフンなし)</th>
      <td><%= f.text_field :postal_code %></td>
      <td></td>
    </tr>
    <tr>
      <th>住所</th>
      <td><%= f.text_field :address %></td>
      <td></td>
    </tr>
    <tr>
      <th>宛名</th>
      <td><%= f.text_field :name %></td>
      <td><%= f.submit "変更内容を保存" , class: 'btn btn-success'%></td>
    </tr>
  </tbody>
<% end %>