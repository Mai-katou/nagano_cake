<h2>注文履歴一覧</h2>

  <table class= "table">
    <thead class = "thead-light">
      <tr>
        <th scope="col">日時</th>
        <th scope="col">購入者</th>
        <th scope="col">注文個数</th>
      </tr>
    </thead>

    <tbody>
      <% @orders.each do |order| %>
      <tr>
        <th><%= order.created_at.strftime('%Y/%m/%d')%></th>
        <td><%= order.customer.last_name %><%= order.customer.first_name %></td>
        <td><% @total_amount = 0 %>
            <% order.order_details.each do |order_detail| %>
            <% @total_amount += order_detail.amount %>
            <% end %>
            <%= @total_amount %></td>
      </tr>
      <% end %>
    </tbody>
  </table>