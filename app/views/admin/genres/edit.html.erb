<h2>ジャンル編集</h2>
  <table class="table table-borderless">
    <tbody>
       <%= form_with model: @genre, method: :patch, url: admin_genre_path(@genre.id), local:true do |f| %>
      <th>ジャンル名</th>
      <td> <%= f.text_field :name %></td>
      <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
      </th>
    <% end %>
    </tbody>
  </table>