<h2>ジャンル編集</h2>
  <table class="genres table table-borderless">
    <tbody>
      <tr>
         <%= form_with model: @genre, url: admin_genre_path(@genre.id), method: :patch, local:true do |f| %>
        <th>ジャンル名</th>
        <td> <%= f.text_field :name %></td>
        <td><%= f.submit '変更を保存', class: "btn btn-success" %></td>
        <% end %>
      </tr>
    </tbody>
  </table>