<h2>ジャンル一覧・追加</h2>
<div class="container">
    <div class="row">
        <div class="col-md-4">ジャンル名</div>
        <div class="col-md-4">
            <%= form_with model: @genre,url: admin_genres_path, local:true do |f| %>
            <%= f.text_field :name %>
        </div>
        <div class="col-md-4">
            <%= f.submit '新規登録', class:"btn btn-success" %>
        </div>
        <% end %>
    </div>

    <table class="table col-md-8">
        <thead class ="thead-light">
            <tr>
            <th>ジャンル</th>
            <th></th>
            </tr>
        </thead>

        <tbody>
            <% @genres.each do |genre| %>
            <tr>
                <td><%= genre.name %></td>
                <td><%= link_to '編集する', edit_admin_genre_path(genre.id), class: "btn btn-success" %></td>
            </tr>
            <% end %>
        </tbody>
    </table>
</div>