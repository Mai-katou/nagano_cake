<div class="conteiner">
  <div class="row" >
    <h2 class="col-md-4">商品一覧</h2>
    <div Class="add-item col-md-2 offset-md-6">
    <%= link_to new_admin_item_path do %><i class="fas fa-plus-circle fa-3x"></i><% end %>
    </div>
  </div>
  <table class="table">
    <thead class ="thead-light">
    <tr>
      <th scope ="col">商品ID</th>
      <th scope ="col">商品名</th>
      <th scope ="col">税抜価格</th>
      <th scope ="col">ジャンル</th>
      <th scope ="col">ステータス</th>
    </tr>
    </thead>

    <tbody>
      <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= link_to admin_item_path(item.id) do %>
              <div class="link-dark"><%= item.name %></div>
              <% end %>
              </td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><% if item.is_active == true %>
                <strong class="active-true">販売中</strong>
              <% else %>
                <strong class="active-false">販売停止中</strong>
              <% end %></td>
        </tr>
      <% end %>
    </tbody>
  </table>
  <%= paginate @items %>
  </div>