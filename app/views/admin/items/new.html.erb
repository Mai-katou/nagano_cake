<div class="container">
  <h2>商品新規登録</h2>
  <%= form_with model: @item, method: :post, url: admin_items_path, local:true do |f| %>

  <table class="table table-borderless">
    <tbody>
      <tr>
        <th class="col-3">商品画像</th>
          <td><%= f.file_field :image, accept: "image/*" %></td>
        </tr>
      <tr>
        <th>商品名</th>
          <td> <%= f.text_field :name %></td>
        </tr>
      <tr>
        <th>商品説明</th>
          <td><%= f.text_area :introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th>
          <td><%= f.collection_select :genre_id, Genre.all, :id, :name,:include_blank => "-選択してください-" %></td>
      </tr>
      <tr>
        <th>税抜価格</th>
          <td><%= f.text_field :price %>　<a>円</a></td>
      </tr>
      <tr>
        <th>販売ステータス</th>
          <td><%= f.radio_button :is_active, :true %>
              <%= f.label :is_active, :販売中 %>
              <%= f.radio_button :is_active, :false %>
              <%= f.label :is_active, :販売停止中 %></td>
      </tr>
      <tr>
        <th></th>
          <td><%= f.submit "新規登録", class:"btn btn-success" %></td>
      </tr>
    </tbody>
  </table>
  <% end %>
</div>