<h2>商品編集</h2>
  <div class="container">
  <%= form_with model: @item, url: admin_item_path(@item.id), method: :patch, local:true do |f| %>

    <div class="field row">
      <%= f.label :商品画像, class:"col-md-2" %>
      <%= f.file_field :image, accept: "image/*" ,class: "col-md-4"%>
    </div>

    <div class="field row">
      <%= f.label :商品名, class:"col-md-2" %>
      <%= f.text_field :name ,class: "col-md-4"%>
    </div>

    <div class="field row">
      <%= f.label :商品説明, class:"col-md-2" %>
      <%= f.text_area :introduction,class: "col-md-4" %>
    </div>

    <div class="field row">
      <%= f.label :ジャンル, class:"col-md-2" %>
      <%= f.collection_select :genre_id, Genre.all, :id, :name,:include_blank => "-選択してください-",class: "col-md-4" %>
    </div>

    <div class="field row">
      <%= f.label :税抜価格, class:"col-md-2" %>
      <%= f.text_field :price,class: "col-md-4" %>　<a>円</a>
    </div>

    <div class="field row">
      <%= f.label :販売ステータス, class:"col-md-2" %>
      <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, :販売中,class: "col-md-2" %>
       <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, :販売停止中,class: "col-md-2" %>
    </div>

    <div class ="action field row">
    <%= f.submit "変更を保存" ,class: "btn btn-success col-md-4"%>
    </div>

  <% end %>
  </div>