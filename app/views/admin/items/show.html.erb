<h2>商品詳細</h2>
  <div class="container">
    <div class="row">
      <div class="col-md-4">
        <%= image_tag @item.get_image,size:"200x200" %>
      </div>
      <div class="col-md-8">
      <div class="show row">
        <div class="col-md-4">商品名</div>
        <div class="col-md-8"><%= @item.name %></div>
      </div>

      <div class="show row">
        <div class="col-md-4">商品説明</div>
        <div class="col-md-8"><%= @item.introduction %></div>
      </div>

      <div class="show row">
        <div class="col-md-4">ジャンル</div>
        <div class="col-md-8"><%= @item.genre.name %></div>
      </div>

      <div class="show row">
        <div class="col-md-4">税込価格</br>(税抜価格)</div>
        <div class="col-md-8">(<%= @item.price %>)</div>
      </div>

       <div class="show row">
        <div class="col-md-4">販売ステータス</div>
        <div class="col-md-8">
          <% if @item.is_active == true %>
            <p class="true">販売中</p>
          <% else %>
            <p class="false">販売停止中</p>
          <% end %>
        </div>
      </div>

    <%= link_to "編集する", edit_admin_item_path(@item.id), class: "btn btn-success" %>