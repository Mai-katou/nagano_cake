<h2>会員一覧</h2>
  <table class="table">
    <thead class ="thead-light">
    <tr>
      <th scope ="col">会員ID</th>
      <th scope ="col">氏名</th>
      <th scope ="col">メールアドレス</th>
      <th scope ="col">ステータス</th>
    </tr>
    </thead>

    <tbody>
      <% @customers.each do |customer| %>
      <tr>
        <td><%= customer.id %></td>
        <td><%= link_to admin_customer_path(customer.id) do %>
              <div class="link-dark"><%= customer.last_name %>
              <%= customer.first_name %></div>
              <% end %></td>
        <td><%= customer.email %></td>
        <td><% if customer.is_deleted == false %>
              <strong class ="false">有効</strong>
            <% else %>
              <strong class="true">退会</strong>
            <% end %>
        </td>
      </tr>
      <% end %>
    </tbody>
    <%= paginate @customers %>
  </table>