<h2><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h2>
  <%= form_with model: @customer, method: :patch, url: admin_customer_path(@customer.id), local:true do |f| %>

 <table class= "table table-borderless">
  <tbody>
    <tr>
      <th scope="row">会員ID</th>
      <td><%= @customer.id %></td>
    </tr>
    <tr>
      <th scope="row">氏名</th>
      <td><%= f.text_field :last_name %> <%= f.text_field :first_name %></td>
    </tr>
    <tr>
      <th scope="row">フリガナ</th>
      <td><%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %></td>
    </tr>
    <tr>
      <th scope="row">郵便番号</th>
      <td><%= f.text_field :postal_code %></td>
    </tr>
    <tr>
      <th scope="row">住所</th>
      <td><%= f.text_field :address %></td>
    </tr>
    <tr>
      <th scope="row">メールアドレス</th>
      <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
    </tr>
    <tr>
      <th scope="row">会員ステータス</th>
      <td> <%= f.radio_button :is_active, :true %>
      <%= f.label :is_active, :有効%>
       <%= f.radio_button :is_active, :false %>
      <%= f.label :is_active, :退会 %></td>
    </tr>
    <tr>
      <th></th>
      <td><%= f.submit '変更を保存' ,class: 'btn btn-success' %></td>
    </tr>
  </tbody>
</table>

<% end %>