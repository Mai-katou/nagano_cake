<h2>注文履歴詳細</h2>
<div class="container">
  <div class="row">
    <table class="table table-borderless">
      <tbody>
        <tr>
          <th>購入者</th>
          <td><%= @order.customer.last_name %></td>
        </tr>
        <tr>
          <th>注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d')%></td>
        </tr>
        <tr>
          <th>配送先</th>
          <td>〒<%= @order.postal_code %> <%= @order.address %><br>
                <%= @order.name %></td>
        </tr>
      </tbody>
    </table>
  </div>
  <div class="row">
    <div class="col-md-8">
    <table class="table">
      <thead　class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order.order_details.each do |order_detail| %>
        <tr>
          <th><%= order_detail.item.name %></th>
          <td><%= order_detail.item.price %>
              (<%= order_detail.price %></td>
          <td><%= order_detail.amount %></td>
          <td><% @subtotal += order_detail.item.subtotal %>
              <%= @subtotal %></td>

        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
  <div class="col-md-4">
    <table class ="table table-borderless">
      <tbody>
        <tr>
          <th>商品合計</th>
          <td><%= @subtotal %></td>
        </tr>
        <tr>
          <th>送料</th>
          <td><%= @order.postage %></td>
        </tr>
        <tr>
          <th>請求金額合計</th>
          <td><%= @order.total_payment %></td>
        </tr>
      </tbody>
    </table>
  </div>
</div>