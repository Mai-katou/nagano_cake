<!DOCTYPE html>
<html>
  <head>
    <title>NaganoCake</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

	<script src="https://kit.fontawesome.com/ab08715929.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
    <%= stylesheet_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <header class="shadow-sm">
    	<nav class="navbar">
    		<div class = "container">
    			<p class= "logo navbar-brand p-3">LOGO</p>

       		<ul>
						<% if customer_signed_in? %>
  						<li class="nav-item btn btn-outline-dark">
								<%= link_to "マイページ",	customers_my_page_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "商品一覧", items_index_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "カート",	cart_items_index_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "ログアウト",	destroy_customer_session_path, method: :delete, class:'text-dark' %>
							</li>
						<% elsif admin_signed_in? %>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "商品一覧", admin_items_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "会員一覧", admin_customers_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "注文履歴一覧", admin_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to　"ジャンル一覧", admin_genres_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "ログアウト", admin_root_path,method: :delete, class:'text-dark' %>
							</li>
						<% else %>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "About", about_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "商品一覧", items_index_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to"新規登録", new_customer_registration_path, class:'text-dark' %>
							</li>
							<li class="nav-item btn btn-outline-dark">
								<%= link_to "ログイン", new_customer_session_path, class:'text-dark' %>
							</li>
						<% end %>
						</ul>
					</div>
				</nav>
			</header>
		<main>
   		<%= yield %>
		</main>
		<footer></footer>
</html>
